page{
  height: 100%;
}
.hide{
 display: none;
}
.show{ 
 display: block;
}
.setting{
  width: 50px;
  height: 50px;
  left: 0;
  top: 0;
  position: relative;
  display: flex;
}
.settingView{
  background-color: gainsboro;
}
.settingItem{
  font-size: 30rpx;
  margin-left: 30px;
  display: flex;
  align-items: center;
  padding-bottom:10rpx;
}
.settingButtonView{
  position: absolute;
  right: 10px;
  bottom: 10px;
  width: 50px;
  height: 50px;
  z-index: 10000;
}
.titleView{
  height: 30rpx;
}
.title{
  font-size: 20rpx;
  float: left;
  color:rgb(90, 161, 217);
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

