.shadow{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(128, 128, 128, 0.7);
  align-items: center;
  justify-content: center;
}
.courseDetail{
  position: relative;
  width: 600rpx;
  /* height: 400rpx; */
  border-radius: 5px;
  background-color: white;
  box-shadow: 5px gray;
  padding-bottom: 20rpx;
}
.courseDetailHead{
  width: 100%;
  justify-content: center;
}
.courseDetailName{
  margin-left: 5%;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  width: 90%;
  color: skyblue;
  font-size: 30rpx;
  border-bottom: solid 1px gainsboro;
  text-align: center;
}
