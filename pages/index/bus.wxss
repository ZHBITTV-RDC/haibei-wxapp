  width: 90%;
  margin-left: 5%;
  background-color: rgb(0, 110, 255);
  border-radius: 10px;
}
.busContent{
  width: 94%;
  border-radius: 10px;
  border: solid 4px white;
  margin-top: 6px;
  margin-bottom: 6px;
}
.station{
  width: 35%;
  float: left;
  color: white;
  font-weight: bold;
  height: 100rpx;
}
.arrow{
  height: 100rpx;
}
.arrowView{
  float: left;
  width: 30%;
}
.timeRight{
  color: white;
  font-size: 30rpx;
  font-weight: bold;
  padding-right: 10px;
  text-align: right;
}
.timeLeft{
  color: white;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 10px;
  padding-top: 10px;
  width: 100%;
}
.locationView{
  width: 100%;
  height: 60rpx;
}
.info{
  height: 100rpx;
}
.timeView{
  width: 100%;
  height: 60rpx;
}
.locationContent{
  float: left;
  width: 90%;
  height: 60rpx;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.locationIcon{
  width: 20px;
  height: 60px;
  margin-left: 10rpx;
}
.locationIconView{
  width: 10%;
  height: 60rpx;
  float: left;
}
.tableHeadItem{
  float: left;
  width: 25%;
  height: 60rpx;
  font-size: 33rpx;
}
.tableHead{
  height: 60rpx;
}
.tableLeft{
  width: 50%;
  float: left;
}
.timeTable{
  width: 90%;
  margin-left: 5%;
}
.trip{
  height: 60rpx;
  width: 100%;
}
.tableBodyItem{
  float: left;
  width: 49.5%;
  height: 60rpx;
  font-size: 33rpx;
}
.hasPass{
  text-decoration: line-through;
}
.busView{
  width: 100%;
}
.tableBody{
  width: 100%;
}
.show{
  position: absolute;
  top: 20rpx;
  animation:show 1.5s;
}
.hide{
  position: absolute;
  top: 1040rpx;
  animation:hide 1.5s;
}
@keyframes show{
from  {top: 1040rpx}
to {top: 20rpx}
}

@keyframes hide{
from  {top: 20rpx}
to {top: 1040rpx}
}
.change{
  position: absolute;
  right: 10rpx;
  width: 100rpx;
  height: 100rpx;
  bottom: 200rpx;
}