.weui-tab{ 
  width: 100%;
  }
.weui-navbar{  
    width: 90%;
    line-height: 80rpx;
    background: #fff;
    display: block;
    z-index: 9999;
    padding: 0 5%;
}  
.weui-navbar__item{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 50%;
  color: #333;  
  text-align: center;
}  
.weui-bar__item_on{ 
  color: #00AC2C;  
  border-bottom: 4rpx solid #00AC2C;
}  
.weui-tab__panel{ 
  z-index: 9000;
  margin-top: 204rpx;
  width: 100%;
}

.homeView{
  position: fixed;
  right: 20rpx;
  z-index: 999;
  color: #fff;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  width: 84rpx;
  height: 84rpx;
}
.homeView image{
  display: inline-block;
  text-align: center;
  width: 60rpx;
  height: 60rpx;
}
.homeView text{
  font-size: 22rpx;
    display: block;
    line-height: 30rpx;
}

.round-click{
    height: 84rpx;
    width: 84rpx;
    background-color: rgba(0,0,0,0.5);
    border-radius: 100%;
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click view{
    font-size: 28rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
    line-height: 28rpx;
}