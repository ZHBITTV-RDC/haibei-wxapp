/* pages/view/view.wxss */

.containes {
  /* padding-bottom: 45px; */
}

.viewMain{
  width: 92%;
  margin: 30rpx auto 0
}

.UserName{
  display:flex;
  border-bottom: 2rpx #FAFAFA dashed; padding-bottom: 20rpx
}
.UserName .UserPic{
  flex: 4;
  width: 80rpx; height: 80rpx; flex-direction:row;
}
.UserName .UserPic image{width: 72rpx; height: 72rpx; border-radius: 50%; border: 2rpx #e3e3e3 solid; background: #fff}
.UserName .UserPic text{
  width: 300rpx; 
  height: 80rpx; 
  line-height: 80rpx; 
  margin-left: 10rpx; 
  position:  absolute;
  overflow: hidden
}

.UserName .UserDate{
  flex: 2;
  text-align: right; height: 80rpx; line-height: 80rpx; color: #999
}

.content{
   margin: 30rpx auto; width: 100%;
}

.mbTxing{
   width: 92%; background: #FFF5EC; padding:3% 4%; 
   color: #FF8E28; font-size: 10pt;
}
.mbTxing text{ width: 100%; display: block }

.content-a{ width: 100%; margin-bottom: 20rpx;  font-size: 20px;}
.content-b{ width: 100%; text-align: center}
.content-c{ width: 100%; margin-bottom: 20rpx;  font-size: 16px; color: gray;}
.content-tel{ padding-bottom: 25rpx; color: #999; }
.content-tel image{ width: 10px;}
.content-tel text{ padding-left: 20rpx}
.bottom {border-bottom: 2rpx #F5F5F5 solid; width: 100%;}
.line{ width: 100%; background-color: #EEEDF2; height: 10px}
.pinglun{
  width: 100%; display: block; margin-top: 10rpx
}
.pinglun text{
  padding: 20rpx 30rpx; display: block; font-size: 14px; color: #999
}
.comments {
   border-top: 2rpx #F5F5F5 solid;
   padding: 0 20rpx; background-color: #fff;
}

.content {
  word-break: break-all;
  font-size: 14px;
}

.item {
  display: flex;
  position: relative;
  padding: 15px;
  border-bottom: 2rpx #F5F5F5 solid
}

.i-right {
  width: 100%;
}

.c-u-img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 8px;
}

.item .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3px;
}

.item .u-name {
  color: deepskyblue;
  font-size: 12px;
  overflow: hidden;
  padding-top: 15rpx;
}

.item .time {
  color: #888;
  font-size: 12px;
  padding-top: 15rpx
}


.weui-loadmore__tips{ font-size: 12px; color: #C1C1C1; width: 100%; text-align: center; padding:30rpx 0 120rpx 0;}


/* 获取当前位置 */
.getGps{
  width: 92%; background: #FFF; padding:3% 4%; font-size: 12px; color: #C1C1C1;
  text-align: right
}
image.mapIco{
  width: 2%;
  margin-left: 13rpx
}

/* 关注度 */
.Guanzhu{
 padding:4% 0; width: 100%
}
.Guanzhu label{
  width: 100%; display: block; text-align: center; color: #C1C1C1; font-size: 12px;
  margin-bottom: 10px
}
.gzList{
  width: 100%; display: block;
}
.gzAuthor{ width: 7%; margin: 2% 2% 0 0; opacity:0.6;}

/* 转发按钮 */
.zhuan{ width: 90%; padding:3% 5%;  background: #FAFAFA;}
.zhuan button{ border-radius: 50px; background: #fff; font-size: 15px; color:#999; border: 2rpx #F4F4F4 solid;}
.zhuan button::after {
  border: 0; 
}


.shareView{
  width: 100%;
  height: 400rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 1001;
}
.closeBtn{
  width: 100%;
  height: 86rpx;
  background: #fafafa;
  text-align: center;
  font-size: 26rpx;
  line-height: 86rpx;
  color: #999;
}
.shareChoose{
  height: 180rpx;
  padding: 74rpx 120rpx 60rpx;
  display: flex;
  justify-content: space-between;
}
.shareWechat,.shareWechat {
  width: 160rpx;
  text-align: center;
}
.textExplain {
  font-size: 26rpx;
  color: #666;
}
.shareChoose image {
  width: 156rpx;
  height: 148rpx;
}

button:after {
  display: none;
}
.page-shade {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}
