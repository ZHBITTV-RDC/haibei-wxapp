<!-- 1. 塔尖 -->
<view class="delta"></view>


<!-- 2. 主体部分 -->
<view class="Container">
  <!-- 两横线放个心 -->
  <view class="decorate">
    <view class="double-line"></view>
    <image src="../img/heart.svg"></image>
  </view>
  <!-- 线上报名标题 -->
  <view class="title">
    <image src="../img/paopao.svg"></image>
    <view class="pxsbx">
      <view>线上报名表</view>
    </view>
  </view>
  <!-- 表单 -->
  <form bindsubmit="enroll">
    <!-- 上传照片 -->
    <view class="upPhoto fl-r">
      <text>给个照片康康叭~</text>
      <button class="up" bindtap="chooseImg">上传照片</button>
      <input hidden name="photo" value="{{imageURL}}"></input>
    </view>

    <!-- 名字 -->
    <view class="wrap">
      <label>这位plmm/sqgg，你叫什么名字呀？</label>
      <input name="name1"></input>
    </view>
    <!-- 性别 -->
    <view class="wrap">
      <label>你是GG还是MM咧？</label>
      <button class="left" bindtap="boy" style="{{boyBg}}"> GG </button>
      <button class="right" bindtap="girl" style="{{girlBg}}"> MM </button>
      <view class="clear"></view>
      <input hidden name="sex" value="{{sex?'女':'男'}}"></input>
    </view>

    <!-- 年级学院 -->
    <view class="wrap ">
      <label>年级专业班级我想了解一下嘛~</label>
      <!-- <input name="college"></input> -->
      <!-- pick -->
      <picker mode="multiSelector" bindchange="bindPickerChange" bindcolumnchange="bindPickerColumnChange" value="{{idx}}" range="{{info}}">
        <input disabled="disabled" name="grade" value="{{info[0][idx[0]]}}{{info[1][idx[1]]}}{{info[2][idx[2]]}}{{info[3][idx[3]]}}">
        </input>
      </picker>
    </view>
    <!-- 手机号 -->
    <view class="phone-wrap">
      <label>能拥有你的电话吗-3-</label>
      <view class="fl-b">
        <input type="number" name="phone" value="{{phone}}"></input>
        <button class="auto" bindtouchstart="beginStyle" bindtouchend="endStyle" style="{{btnStyle}}" open-type="getPhoneNumber" bindgetphonenumber="getPhone">自动填写</button>
      </view>
    </view>
    <!-- 特殊爱好 -->
    <view class="wrap">
      <label>告诉我你的微信号呗~</label>
      <input name="weixin"></input>
    </view>
    <!-- 特殊爱好 -->
    <view class="wrap">
      <label>你平时喜欢做什么捏？</label>
      <input name="hobby"></input>
    </view>
    <!-- 理想炮友类型 -->
    <view class="wrap">
      <label>你的理想型是啥哇？</label>
      <textarea name="lixiangxing"></textarea>
    </view>
    <!-- 提交 -->
    <view class=" submit-wrap fl-r">
      <image src="{{subSrc}}" bindtouchstart="clickStart" bindtouchend="clickEnd">
        <button plain="true" form-type="submit"></button>
      </image>
    </view>
  </form>
  <!-- 点炮活动独家防伪标志 -->
  <image src="../img/cpImg.png" class="cpImg"></image>
</view>
<!-- 2. 后面信封 -->
<view class="hinder"></view>
<!-- 3. 前面信封 -->
<view class="cover"></view>
<!-- logo -->
<image class="logo" src="../img/logo.png"></image>


<!-- 预览照片小窗 -->
<view class="window" wx:if="{{showPop}}">
  <view class="block">
    <view class="photo">
      <image src="{{localPhoto}}" style="width:100%;height:100%;"></image>
    </view> 
    <view class="two-btn">
      <button bindtap="chooseImg">更换</button>
      <button bindtap="closePop">确定</button>
    </view>
  </view>
</view>
